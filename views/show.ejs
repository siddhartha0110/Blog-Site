<><% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title%></div>
    <div class="ui top attached">
        <div class="item"> 
            <img src="<%= blog.image%>" class="ui centered rounded image">
            <div class="content">
                <p>Created On:<span><%= blog.created.toDateString() %></span></p>
            </div>
            <div class="description">
                    <p><%- blog.body%></p>
            </div>
            <a class="ui inverted blue button" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form id="delete" method="POST" action="/blogs/<%= blog._id %>?_method=DELETE">  
                <button class="ui inverted red button">DELETE</button>
            </form>
        </div>
    </div> 
</div>
<% include partials/footer %>